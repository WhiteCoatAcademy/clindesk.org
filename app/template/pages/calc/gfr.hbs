<p>Creatinine Clearance: \{{calc_cockcroftGaultFormula(gfr_calc_settings.weight_units, gfr_calc_settings.creatinine_units)}}</p>
<form class="form-horizontal" role="form">
  <div class="form-group form-inline">
    <label class="col-sm-2 control-label">Age:</label>
    <div class="col-xs-10">
        <input type="number" class="form-control col-xs-10" ng-model="patient_data.age"required>
        <select class="col-xs-2 form-control">
          <option>yr</option>
        </select>
    </div>

  </div>
  <div class="form-group form-inline">
    <label class="col-sm-2 control-label">Weight:</label>
    <div class="col-sm-10">
      <input type="number" class="form-control col-xs-10" ng-model="patient_data.weight" required>
      <select class="col-xs-2 form-control" ng-model="gfr_calc_settings.weight_units" ng-options="unit for unit in weight_units">
      </select>
    </div>

  </div>
  <div class="form-group form-inline">
    <label class="col-sm-2 control-label">Serum Creatinine:</label>
    <div class="col-sm-10">
      <input type="text" class="form-control col-xs-10" ng-model="patient_data.creatinine" required>
      <select class="col-xs-2 form-control" ng-model="gfr_calc_settings.creatinine_units" ng-options="unit for unit in creatinine_units">
      </select>
    </div>
  </div>
  <div class="form-group form-inline">
    <label class="col-sm-2 control-label">Gender:</label>
    <div class="col-sm-10">
      <div class="btn-group">
      <button type="button" class="btn btn-default" ng-class="{'btn-info':patient_data.male}" ng-click="patient_data.male=true">Male</button>
      <button type="button" class="btn btn-default" ng-class="{'btn-info':patient_data.male ===false}" ng-click="patient_data.male=false">Female</button>
    </div>
    </div>
  </div>
</form>
<div dthree-plot patient="patient_data" dat="cockcroftGaultGraphing('weight',  gfr_calc_settings.weight_units, gfr_calc_settings.creatinine_units)"></div>
